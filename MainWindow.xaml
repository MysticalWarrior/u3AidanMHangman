        <Rectangle x:Name="life2" Visibility="Hidden" Fill="Black" Height="6" Canvas.Left="74" Canvas.Top="158" Width="31"/>
        <Rectangle x:Name="life3" Visibility="Hidden" Fill="Black" Height="6" Canvas.Left="110" Canvas.Top="158" Width="34"/>
