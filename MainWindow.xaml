<Window x:Class="u3AidanMHangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u3AidanMHangman"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas x:Name="myCanvas">
        <TextBox x:Name="txtTemp" MinWidth="100" Canvas.Top="20"/>
        <Button x:Name="btnSetWord" Content=" Set Word " Click="btnSetWord_Click"/>
        <Label x:Name="lblInstructions" Content="Enter letter here:" Canvas.Top="75" MinWidth="100"/>
        <TextBox x:Name="txtLetterInput" MinWidth="100" Canvas.Top="100"/>
        <Label x:Name="lblUnderlines" Content="" Canvas.Left="235" Canvas.Top="92"/>
        <Button x:Name="btnGuessLetter" Content="Guess" Click="btnGuessLetter_Click" MinWidth="100" Canvas.Top="118"/>
        <Label x:Name="lblGuessed" Content="Guessed Letters: " Canvas.Left="137" Canvas.Top="10"/>
    </Canvas>
</Window>
